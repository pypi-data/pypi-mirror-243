        <x>-0.77714596</x>
        <y>0.</y>
        <z>-0.62932039</z>
    </dirVector>

    <!-- ****************************************************     -->
    <!-- SPICE DIRECTIONS                                         -->
    <!-- as defined by the JUICE SPICE Kernel data set with.      -->
    <!-- MK_IDENTIFIER = juice_plan_v423_20230328_001             -->

    <!-- JUICE_JANUS +Z -->
