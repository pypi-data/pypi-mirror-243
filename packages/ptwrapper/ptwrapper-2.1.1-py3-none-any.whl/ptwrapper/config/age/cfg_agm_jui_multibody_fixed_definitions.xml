        <x>-0.00181805</x>
        <y>0.00083388</y>
        <z>0.99999800</z>
    </dirVector>

    <!-- JUICE_UVS_SP +Z -->
    <dirVector name="UVS_Sun_port" frame="SC">
        <x>-0.00010908</x>
        <y>0.86725420</y>
        <z>0.49786558</z>
    </dirVector>

    <!-- JUICE_SPACECRAFT_NADIR +Z -->
    <dirVector name="JUICE_SPACECRAFT_NADIR" frame="SC">
        <x>-0.00058662</x>
        <y>0.00057693</y>
        <z>0.99999966</z>
    </dirVector>

    <!-- JUICE_MAJIS_BASE +Z -->
    <dirVector name="JUICE_MAJIS_BASE_Zaxis" frame="SC">
        <x>-0.00427605</x>
        <y>-0.00552195</y>
        <z>0.99997561</z>
    </dirVector>

    <!-- JUICE_HGA +Z -->
    <dirVector name="SC_HGA" frame="SC">
        <x>-1.00000000</x>
        <y>0.00000000</y>
        <z>0.00000000</z>
    </dirVector>

    <!-- JUICE_MAG_BOOM +X -->
    <dirVector name="JUIC_MAG_BOOM" frame="SC">
        <x>0.62932039</x>
        <y>0.00000000</y>
        <z>-0.77714596</z>
    </dirVector>

    <!-- ***************************************************   -->
    <!-- SPACECRAFT DIRECTIONS -->

    <!-- Basic SC axes definition -->

    <!-- SC_Xaxis -->
    <dirVector name="SC_Xaxis" frame="SC">
        <x>1.</x>
        <y>0.</y>
        <z>0.</z>
    </dirVector>

    <!-- SC_Yaxis -->
    <dirVector name="SC_Yaxis" frame="SC">
        <x>0.</x>
        <y>1.</y>
        <z>0.</z>
    </dirVector>

    <!-- SC_Zaxis -->
    <dirVector name="SC_Zaxis" frame="SC">
        <x>0.</x>
        <y>0.</y>
        <z>1.</z>
    </dirVector>

    <!-- Spacecraft directions wrt Jupiter-->

    <!-- JP2SC -->
    <dirVector name="JP2SC">
        <origin ref="Jupiter"/>
        <target ref="SC"/>
    </dirVector>

    <!-- SC2JP -->
    <dirVector name="SC2JP">
        <origin ref="SC"/>
        <target ref="Jupiter"/>
    </dirVector>

    <!-- JP-SC Velocity -->
    <dirVector name="JP2SC_Vel" operator="derivative">
        <origin ref="Jupiter"/>
        <target ref="SC"/>
    </dirVector>

    <!-- JP-SC orbital Pole -->
    <dirVector name="JP2SC_orbPole" operator="cross">
        <dirVector ref="JP2SC"/>
        <dirVector ref="JP2SC_Vel"/>
    </dirVector>

    <!-- Spacecraft directions wrt Callisto-->

    <!-- CA2SC -->
    <dirVector name="CA2SC">
        <origin ref="Callisto"/>
        <target ref="SC"/>
    </dirVector>

    <!-- SC2CA -->
    <dirVector name="SC2CA">
        <origin ref="SC"/>
        <target ref="Callisto"/>
    </dirVector>

    <!-- CA-SC Velocity -->
    <dirVector name="CA2SC_Vel" operator="derivative">
        <origin ref="Callisto"/>
        <target ref="SC"/>
    </dirVector>

    <!-- CA-SC orbital Pole -->
    <dirVector name="CA2SC_orbPole" operator="cross">
        <dirVector ref="CA2SC"/>
        <dirVector ref="CA2SC_Vel"/>
    </dirVector>

    <!-- Spacecraft directions wrt Europa-->

    <!-- EU2SC -->
    <dirVector name="EU2SC">
        <origin ref="Europa"/>
        <target ref="SC"/>
    </dirVector>

    <!-- SC2EU -->
    <dirVector name="SC2EU">
        <origin ref="SC"/>
        <target ref="Europa"/>
    </dirVector>

    <!-- EU-SC Velocity -->
    <dirVector name="EU2SC_Vel" operator="derivative">
        <origin ref="Europa"/>
        <target ref="SC"/>
    </dirVector>

    <!-- EU-SC orbital Pole -->
    <dirVector name="EU2SC_orbPole" operator="cross">
        <dirVector ref="EU2SC"/>
        <dirVector ref="EU2SC_Vel"/>
    </dirVector>

    <!-- Spacecraft directions wrt Ganymede-->

    <!-- GA2SC -->
    <dirVector name="GA2SC">
        <origin ref="Ganymede"/>
        <target ref="SC"/>
    </dirVector>

    <!-- SC2GA -->
    <dirVector name="SC2GA">
        <origin ref="SC"/>
        <target ref="Ganymede"/>
    </dirVector>

    <!-- GA-SC Velocity -->
    <dirVector name="GA2SC_Vel" operator="derivative">
        <origin ref="Ganymede"/>
        <target ref="SC"/>
    </dirVector>

    <!-- GA-SC orbital Pole -->
    <dirVector name="GA2SC_orbPole" operator="cross">
        <dirVector ref="GA2SC"/>
        <dirVector ref="GA2SC_Vel"/>
    </dirVector>

    <!-- ***************************************************   -->
    <!-- SOLAR SYSTEM DIRECTIONS -->

    <!-- Sun -->

    <!-- Sun2SC -->
    <dirVector name="Sun2SC">
        <origin ref="Sun"/>
        <target ref="SC"/>
    </dirVector>

    <!-- SC2Sun -->
    <dirVector name="SC2Sun">
        <origin ref="SC"/>
        <target ref="Sun"/>
    </dirVector>

    <!-- SC-Sun Velocity -->
    <dirVector name="SC2Sun_Vel" operator="derivative">
        <origin ref="SC"/>
        <target ref="Sun"/>
    </dirVector>

    <!-- SC-Sun Orbital Pole -->
    <dirVector name="SC2Sun_orbPole" operator="cross">
        <dirVector ref="SC2Sun"/>
        <dirVector ref="SC2Sun_Vel"/>
    </dirVector>

    <!-- Earth -->

    <!-- Earth2SC -->
    <dirVector name="Earth2SC">
        <origin ref="Earth"/>
        <target ref="SC"/>
    </dirVector>

    <!-- SC2Earth -->
    <dirVector name="SC2Earth">
        <origin ref="SC"/>
        <target ref="Earth"/>
    </dirVector>

    <!-- SC-Earth Velocity -->
    <dirVector name="SC2Earth_Vel" operator="derivative">
        <origin ref="SC"/>
        <target ref="Earth"/>
    </dirVector>

    <!-- SC Earth-orbital Pole -->
    <dirVector name="SC2Earth_orbPole" operator="cross">
        <dirVector ref="SC2Earth"/>
        <dirVector ref="SC2Earth_Vel"/>
    </dirVector>

    <!-- Sun and Earth for Hot Cruise Default Attitude -->

    <!-- SC-Earth x SC-Sun -->
    <dirVector name="SC2EarthSun" operator="cross">
        <dirVector ref="SC2Earth"/>
        <dirVector ref="SC2Sun"/>
    </dirVector>

    <!-- SC-Sun x SC-Earth -->
    <dirVector name="SC2SunEarth" operator="cross">
        <dirVector ref="SC2Sun"/>
        <dirVector ref="SC2Earth"/>
    </dirVector>

    <!-- wrt Jupiter -->

    <!-- JP2Sun -->
    <dirVector name="JP2Sun">
        <origin ref="Jupiter"/>
        <target ref="Sun"/>
    </dirVector>

    <!-- Jupiter North Pole -->
    <dirVector frame="JUPITER" name="JPNorthPole">
        <lon units="deg">0.000</lon>
        <lat units="deg">90.000</lat>
    </dirVector>

    <!-- wrt Callisto -->

    <!-- CA2Sun -->
    <dirVector name="CA2Sun">
        <origin ref="Callisto"/>
        <target ref="Sun"/>
    </dirVector>

    <!-- wrt Europa -->

    <!-- EU2Sun -->
    <dirVector name="EU2Sun">
        <origin ref="Europa"/>
        <target ref="Sun"/>
    </dirVector>

    <!-- wrt Ganymede -->

    <!-- GA2Sun -->
    <dirVector name="GA2Sun">
        <origin ref="Ganymede"/>
        <target ref="Sun"/>
    </dirVector>


	<!-- ***************************************************   -->
