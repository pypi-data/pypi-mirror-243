{% extends "page.html.j2" %}

{% block container %}
<div class="row mb-1">
    <div class="col">
        <h1>Calendar</h1>
    </div>
</div>

<div class="row mb-1">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th>Year</th>
                    {% for i in range(1, 13) %}
                    <th style="text-align: right;">{{ i }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for year, month_data in monthly_distances.items() %}
                <tr>
                    <td>{{ year }}</td>
                    {% for month, distance in month_data.items() %}
                    <td align="right">
                        {% if distance > 0 %}
                        <a href="/calendar/{{ year }}/{{ month }}">{{ distance|int() }} km</a>
                        {% endif %}
                    </td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>


{% endblock %}