{
    "tag": "test",
    "control": {
        "overwrite": true,
        "sbatch": true,
        "folder": "slurm_output"
    },
    "env": {
        "folder_delete": ["data_output"],
        "folder_create": ["data_output"],
        "var": {
            "PYTHONUNBUFFERED": "1",
            "VARWORLD": "welcome!"
        }
    },
    "job": {
        "pragmas": {
            "time":  "4:00:00",
            "nodes":  "1",
            "ntasks-per-node": "2",
            "mem":  "8G"
        },
        "commands": [
            {
                "tag": "hello",
                "executable": "python3",
                "arguments": ["run_slurm.py", "hello", "hello world!"]
            },
            {
                "tag": "goodbye",
                "executable": "python3",
                "arguments": ["run_slurm.py", "goodbye" ,"goodbye world!"]
            }
        ]
    }
}
